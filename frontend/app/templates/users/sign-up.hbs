<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-login">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-6">
              {{#link-to 'login' id="login-form-link" }} Login {{/link-to}}
            </div>
            <div class="col-xs-6">
              {{#link-to 'users.sign-up' id="register-form-link" }} Register {{/link-to}}
            </div>
          </div>
          <hr>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12">
              <form id="register-form" role="form">
                <div class="form-group">
                  {{input type="email" value=model.email placeholder="Email" name="email" id="email" tabindex="1" class="form-control"}}
                </div>
                <div class="form-group">
                  {{input value=model.password type="password" placeholder="Password" name="password" id="password" tabindex="2" class="form-control"}}
                </div>
                <div class="form-group">
                  {{input value=model.passwordConfirmation type="password" placeholder="Password Again" name="confirm-password" id="confirm-password" tabindex="2" class="form-control"}}
                </div>
                <div class="form-group">
                  <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                      {{#if authenticateNewUser.isRunning}}
                        <div class="loader-container">


                          <div class="loader">

                          </div>
                        </div>
                      {{else}}
                        <input {{action 'triggerSaveChain' model}} type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Register Now">
                      {{/if}}
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{#if errorMessage}}
  {{errorMessage}}
{{/if}}

{{#if saveNewUser.isRunning}}
  <h1>Awaiting SaveAction</h1>
{{/if}}
